<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns="http://citrusframework.org/schemas/greeting"
           targetNamespace="http://citrusframework.org/schemas/greeting"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified">

  <xs:complexType name="GreetingType">
    <xs:sequence>
      <xs:element name="name" type="xs:string"/>
      <xs:element name="type" type="GreetingEnumType"/>
    </xs:sequence>
  </xs:complexType>

  <xs:simpleType name="GreetingEnumType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="MORNING"/>
      <xs:enumeration value="AFTERNOON"/>
      <xs:enumeration value="EVENING"/>
      <xs:enumeration value="NIGHT"/>
      <xs:enumeration value="HELLO"/>
      <xs:enumeration value="GOODBYE"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="GreetingRequest" type="GreetingType"/>
  <xs:element name="GreetingResponse" type="GreetingType"/>
  <xs:element name="GreetingMessage" type="GreetingType"/>
</xs:schema>