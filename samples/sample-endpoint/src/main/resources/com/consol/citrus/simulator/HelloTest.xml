<?xml version="1.0" encoding="UTF-8"?>
<spring:beans xmlns="http://www.citrusframework.org/schema/testcase"
              xmlns:spring="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                  http://www.citrusframework.org/schema/testcase http://www.citrusframework.org/schema/testcase/citrus-testcase.xsd">

  <testcase name="HelloTest">
    <meta-info>
      <author>Christoph Deppisch</author>
      <creationdate>2014-01-14</creationdate>
      <status>FINAL</status>
      <last-updated-by>Christoph Deppisch</last-updated-by>
      <last-updated-on>2014-01-14T00:00:00</last-updated-on>
    </meta-info>

    <description>Processing a Hello request providing proper response message.</description>

    <actions>
      <echo>
        <message>Validate Hello request</message>
      </echo>

      <receive endpoint="simulatorInboundEndpoint">
        <message>
          <payload>
            <mail-message xmlns="http://www.citrusframework.org/schema/mail/message">
              <from>user@citrusframework.org</from>
              <to>citrus@citrusframework.org</to>
              <cc></cc>
              <bcc></bcc>
              <subject>Hello</subject>
              <body>
                <contentType>text/plain; charset=utf-8</contentType>
                <content>Say Hello!</content>
              </body>
            </mail-message>
          </payload>
        </message>
      </receive>

      <send endpoint="simulatorInboundEndpoint">
        <message>
          <payload>
            <mail-response xmlns="http://www.citrusframework.org/schema/mail/message">
              <code>250</code>
              <message>OK</message>
            </mail-response>
          </payload>
        </message>
      </send>
    </actions>
  </testcase>
</spring:beans>
